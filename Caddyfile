{$MCP_DOMAIN} {
    # Automatic HTTPS via Let's Encrypt
    reverse_proxy localhost:8000 {
        # Increase timeouts for MCP server startup (servers need time to spawn and initialize)
        transport http {
            read_timeout 30s
            write_timeout 30s
        }
    }
    
    # Enable access logs
    log {
        output stdout
        format console
    }
}
