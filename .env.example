# MCP Gateway Configuration
# Copy this to .env or .env.local and fill in your values

# ============================================================================
# Google OAuth Configuration
# ============================================================================
# Get these from: https://console.cloud.google.com/apis/credentials
# Add redirect URI: https://your-domain.com/auth/callback

MCP_DOMAIN=localhost:8000
MCP_OIDC_CLIENT_ID=your-client-id.apps.googleusercontent.com
MCP_OIDC_CLIENT_SECRET=GOCSPX-your-client-secret
MCP_ALLOWED_USERS=your-email@gmail.com

# ============================================================================
# GCP Deployment (for deploy-gateway.sh)
# ============================================================================

GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1

# ============================================================================
# MCP Server API Keys
# ============================================================================
# These are passed to the stdio MCP servers as environment variables

CONTEXT7_API_KEY=your-context7-api-key
FIRECRAWL_API_KEY=your-firecrawl-api-key
LINKUP_API_KEY=your-linkup-api-key
OPENMEMORY_API_KEY=your-openmemory-api-key
PERPLEXITY_API_KEY=your-perplexity-api-key
